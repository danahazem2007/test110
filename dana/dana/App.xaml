<Application x:Class="dana.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:dana"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Name="Style_Lable" TargetType="{x:Type Label}">
            <Setter Property ="FontSize" Value="25"></Setter>
            <Setter Property ="FontFamily" Value="Forte"></Setter>
            <Setter Property ="Margin" Value="220,269,0,0"></Setter>
            <Setter Property ="VerticalAlignment" Value="Center"></Setter>
            <Setter Property ="Foreground" Value="Black" ></Setter>


        </Style>
        <Style x:Name="Style_Butten" TargetType="{x:Type Button}">
            <Setter Property ="FontSize"  Value="30"></Setter>
            <Setter Property ="FontFamily" Value="Forte"></Setter>
            <Setter Property ="Margin"     Value="152,156,0,0"></Setter>
            <Setter Property ="Foreground" Value="Black" ></Setter>
            <Setter Property ="VerticalAlignment" Value="Center"></Setter>

        </Style>
    </Application.Resources>
</Application>
